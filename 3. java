import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner userInput = new Scanner(System.in);
        System.out.println("Enter the number of rows required: ");
        int num = userInput.nextInt();
        int a = 0; int b=0;
        for(a=0;a<num;a++)
        { for (b=0;b<=a;b++)
            System.out.print("*");
            System.out.println();
        }

    }
}
