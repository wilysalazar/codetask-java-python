def comparison ():
    str3 = str1.upper()
    str4 = str2.upper()

    if (str3 == str4):
        if (str1 == str2):
            print("0: Both strings are same with case sensitivity.")
        else:
            print("1: Both strings are same without case sensitivity.")
    else:
        print("2: They are not same.")

str1 = input("1st string: ")
str2 = input("2nd string: ")
comparison()
